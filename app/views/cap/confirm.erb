
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h3><center><%= i18n_t("header") %></center></h3>
          <br>
        </div>
      </div>

      <% if expired %>
      <div class="row">
        <a name="error"></a>
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <ul>
                <li><strong><%= i18n_t('error.confirmation.expired') %></strong></li>
                <li><strong><%= i18n_t('error.confirmation.button') %></strong></li>
            </ul>
          </div>
        </div>
        <div class="col-md-2"></div>
      </div>
      <% else %>

      <div class="row">
        <div class="col-md-12">
          <div class="progress">
            <di2v class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%;">
              75%
            </div>
          </div>
      </div>

      <div class="row">
        <div class="col-md-12 text-center">
          <div class="panel panel-default">
            <div class="panel-heading"><h4><%= i18n_t("confirmation.header") %></h4></div>
            <div class="panel-body">
              <div class="col-md-10 text-justify">
                 <form class="form" role="form" id="form" name="form" action="/form" method="get">
                  <font size="4"><%= i18n_asciidoc("confirmation.body", :email => email) %></font>
                    <button type="submit" class="btn btn-default btn-lg btn-block">
                      <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                      <%= i18n_t("confirmation.button") %>
                    </button>
                 </form>
              </div>
              <div class="col-md-2 text-center visible-lg-inline visible-md-inline">
                  <%= image_tag("prgov_acp_email_confirmed2.gif",
                        {:class => 'img-responsive',
                         :alt => 'imagen animada de correo verificado'}
                         ) %>
                  <br/>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% end %>

    </div> <!-- end of container -->
