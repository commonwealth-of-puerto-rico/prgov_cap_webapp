
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h3><center><%= i18n_t("header.title") %><small class="app_status"><%= i18n_t("header.status") %></small></center></h3>
          <br>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <div class="progress">
            <di2v class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">
              50%
            </div>
          </div>
        <div class="col-md-2"></div>
      </div>

      <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
          <div class="panel panel-warning">
            <div class="panel-heading">
              <h3 class="panel-title"><center><%= i18n_t("email_sent.title") %></center></h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-12">
                  <%= i18n_asciidoc("email_sent.already", :email => session[:email], :time => count) %>
                  <% #image_tag("mail.png", {:class => 'img-responsive center-block', :alt => 'icono de correo'}) %>
                  <a href="#" data-toggle="modal" data-target="#moreInfoModal">
                    <%= i18n_t("email_sent.help.text") %>
                  </a>
                  <hr/>
                  <div class="col-xs-12">
                    <form class="form" role="form" id="disclaimer" name="disclaimer" action="<%= uri %>" method="get">
                      <button type="submit" class="btn btn-default btn-lg btn-block"><%= i18n_t("email_sent.reload_button") %></button></div>
                    </form>

                </div>
              </div>

            </div> <!-- end of panel body -->
          </div>
        </div>
      </div>

    </div>

        <!-- Modal -->
        <div class="modal fade" id="moreInfoModal" tabindex="-1" role="dialog" aria-labelledby="moreInfoModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="moreInfoModalLabel"><%= i18n_asciidoc("email_sent.modal.title") %></h4>
              </div>
              <div class="modal-body">
                <%= i18n_asciidoc("email_sent.modal.text", :email => session[:email], :time => time) %>
                <%= i18n_asciidoc("email_sent.resend_message", :email => session[:email], :time => time) %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
